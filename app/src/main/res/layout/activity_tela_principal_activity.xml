<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#BFEFFF"


    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".TelaPrincipal_activity"
    >

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Monitoramento"
        android:id="@+id/btMonitoramento"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="128dp"
        android:layout_alignLeft="@+id/btRecomendacoes"
        android:layout_alignStart="@+id/btRecomendacoes" />
    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Cadastro de paciente"
        android:layout_above="@+id/btMonitoramento"
        android:layout_centerHorizontal="true"
        android:id="@+id/btCadastroPaciente" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Recomendações"
        android:id="@+id/btRecomendacoes"
        android:layout_marginTop="48dp"
        android:layout_alignTop="@+id/btMonitoramento"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
