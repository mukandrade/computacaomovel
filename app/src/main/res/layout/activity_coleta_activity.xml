<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eduardo.escaradedecubitoapp.Coleta_activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00"
        android:clickable="false"
        android:textSize="100dp"
        android:id="@+id/tvCronometro"

        android:layout_above="@+id/btDesativar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imagem"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
<!--    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/etPosicao"
        android:text="DEITADOPARACIMA"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
-->
    <Button
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:text="Desativar"
        android:textSize="30dp"
        android:id="@+id/btDesativar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="138dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlertaSonoro"
        android:textSize="30dp"
        android:id="@+id/cbAlertaSonoro"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    </RelativeLayout>
